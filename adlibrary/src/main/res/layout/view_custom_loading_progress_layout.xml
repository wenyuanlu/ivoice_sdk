<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_r20_white_shape"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/loading_progress_image_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/drawable_circular_animation_ffb600_shape"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/loading_progress_image_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/drawable_circular_animation_ffb600_shape"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/loading_progress_image_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/drawable_circular_animation_ffb600_shape"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/loading_progress_image_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/drawable_circular_animation_ffb600_shape"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/loading_progress_image_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/drawable_circular_animation_ffb600_shape"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>