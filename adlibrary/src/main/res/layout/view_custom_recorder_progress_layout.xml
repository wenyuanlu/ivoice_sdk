<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="@drawable/drawable_r20_white_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/recorder_progress_image_1"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            tools:src="@drawable/drawable_cylinder_animation_ffb600_shape"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/recorder_progress_image_2"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            tools:src="@drawable/drawable_cylinder_animation_ffb600_shape"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/recorder_progress_image_3"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            tools:src="@drawable/drawable_cylinder_animation_ffb600_shape"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/recorder_progress_image_4"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            tools:src="@drawable/drawable_cylinder_animation_ffb600_shape"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/recorder_progress_image_5"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:visibility="invisible"
            tools:src="@drawable/drawable_cylinder_animation_ffb600_shape"
            tools:visibility="visible" />
    </LinearLayout>
</FrameLayout>