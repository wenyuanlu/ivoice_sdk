<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.corpize.sdk.ivoice.view.QcadImageView
        android:id="@+id/custom_template_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="#FF0000" />

    <TextView
        android:id="@+id/custom_template_ad_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/drawable_alpha_40_black_r4_shape"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingTop="2dp"
        android:paddingEnd="5dp"
        android:paddingBottom="2dp"
        android:text="广告"
        android:textColor="#66FFFFFF"
        android:textSize="9sp" />

    <LinearLayout
        android:id="@+id/custom_template_skip_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/drawable_info_skip_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_template_skip_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:textColor="#E6FFFFFF"
            android:textSize="12sp"
            tools:text="15s" />

        <View
            android:id="@+id/custom_template_skip_linear"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="#E6F3F3F3"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/custom_template_skip_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="跳过"
            android:textColor="#E6FFFFFF"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/custom_template_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="60dp"
        android:textColor="#E6FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="主标题主标题主标题主标题主标题" />

    <com.corpize.sdk.ivoice.view.QcadImageView
        android:id="@+id/custom_template_ad_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="13dp"
        tools:background="#FFFB00" />

    <TextView
        android:id="@+id/custom_template_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="20dp"
        android:textColor="#E6F9F9F9"
        android:textSize="14sp"
        tools:text="副标题副标题副标题副标题" />

    <TextView
        android:id="@+id/custom_template_ad_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/drawable_r20_white_shape"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="了解详情"
        android:textColor="#333333"
        android:textSize="12sp" />

</FrameLayout>