<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#333">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/drawable_r5_white_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/download_confirm_icon_show"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            tools:background="#FF0000" />

        <TextView
            android:id="@+id/download_confirm_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="123456789" />

        <TextView
            android:id="@+id/download_confirm_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="版本号:1.0.0" />

        <TextView
            android:id="@+id/download_confirm_app_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="开发者:开发者名称" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/download_confirm_jurisdiction_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="权限详情"
                android:textColor="#5287e2"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/download_confirm_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="隐私政策"
                android:textColor="#5287e2"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/download_confirm_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/drawable_5287e2_r6_shape"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="立即下载"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/download_confirm_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="放弃下载"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>