<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/menuLayoutStyle">

            <TextView
                android:id="@+id/custom_auto_play_ad_load"
                style="@style/menuStyle"
                android:text="加载广告" />

            <TextView
                android:id="@+id/custom_auto_play_ad_show"
                style="@style/menuStyle"
                android:text="展示广告" />
        </LinearLayout>

        <LinearLayout style="@style/menuLayoutStyle">

            <TextView
                android:id="@+id/custom_auto_play_ad_stop"
                style="@style/menuStyle"
                android:text="停止广告" />

            <TextView
                android:id="@+id/custom_auto_play_ad_clear"
                style="@style/menuStyle"
                android:text="清除广告" />
        </LinearLayout>

        <TextView
            android:id="@+id/custom_auto_play_ad_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#333333"
            android:textSize="14dp"
            tools:text="当前广告状态:onAdReceive" />

        <FrameLayout
            android:id="@+id/custom_auto_play_root_view"
            android:layout_width="1920px"
            android:layout_height="1080px"
            android:layout_gravity="center_horizontal"
            tools:background="#FF0000" />
    </LinearLayout>
</ScrollView>