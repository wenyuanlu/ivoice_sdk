<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout style="@style/menuLayoutStyle">
        <TextView
            android:id="@+id/custom_template_ad_load"
            style="@style/menuStyle"
            android:text="加载广告" />

        <TextView
            android:id="@+id/custom_template_ad_show"
            style="@style/menuStyle"
            android:text="展示广告" />
    </LinearLayout>

    <LinearLayout style="@style/menuLayoutStyle">
        <TextView
            android:id="@+id/custom_template_ad_stop"
            style="@style/menuStyle"
            android:text="停止广告" />

        <TextView
            android:id="@+id/custom_template_ad_clear"
            style="@style/menuStyle"
            android:text="清除广告" />
    </LinearLayout>

    <LinearLayout style="@style/menuLayoutStyle">
        <TextView
            android:id="@+id/custom_template_ad_isEnable_destroy"
            style="@style/menuStyle"
            android:text="是否屏蔽onDestroy" />
    </LinearLayout>

    <TextView
        android:id="@+id/custom_template_ad_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#333333"
        android:textSize="14dp"
        tools:text="当前广告状态:onAdReceive" />

    <FrameLayout
        android:id="@+id/custom_template_root_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        tools:background="#FF0000" />

</LinearLayout>